{
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.testing.autoTestDiscoverOnSaveEnabled": false,
    "python.testing.pytestPath": "pytest",
    "python.testing.cwd": "${workspaceFolder}",
    // Pylance performance optimizations (VS Code specific only)
    "python.analysis.packageIndexDepths": [
        {
            "name": "homeassistant",
            "depth": 1,
            "includeAllSymbols": false
        }
    ],
    "python.analysis.autoFormatStrings": false,
    // File watching optimizations
    "files.watcherExclude": {
        "**/__pycache__/**": true,
        "**/htmlcov/**": true,
        "coverage.json": true,
        "coverage.xml": true,
        "**/.git/**": true,
        "**/.mypy_cache/**": true,
        "**/.pytest_cache/**": true,
        "**/.ruff_cache/**": true
    },
    // Editor performance
    "editor.quickSuggestions": {
        "strings": false,
        "comments": false,
        "other": true
    },
    "editor.suggest.localityBonus": true,
    "editor.suggest.shareSuggestSelections": false,
    // Disable resource-intensive features during editing
    "python.analysis.inlayHints.functionReturnTypes": false,
    "python.analysis.inlayHints.variableTypes": false,
    "editor.codeLens": false,
    "editor.hover.delay": 1000,
    // Additional performance optimizations
    "python.analysis.completeFunctionParens": false,
    // GitHub Copilot settings
    "chat.tools.terminal.autoApprove": {
        "awk": true,
        "curl": true,
        "echo": true,
        "head": true,
        "grep": true,
        "ls": true,
        "lsof": true,
        "mypy": true,
        "nohup": true,
        "pgrep": true,
        "pkill": true,
        "ps": true,
        "pytest": true,
        "ruff": true,
        "sed": true,
        "sleep": true,
        "tail": true,
        "tee": true,
        "time": true,
        "uptime": true,
        "who": true,
        "./scripts/lint": true,
        "./scripts/test": true,
        "./scripts/type-check": true,
        "/^apt-cache (search|show)\\b/": true,
        "/^git\\s+(status|diff|log|show)\\b/": true,
        "/^grep (-A|-E|-i)\\b/": true,
        "/^python(3)? -m (mypy|py_compile|pytest|ruff)\\b/": true,
        "/^time\\b/": true,
        "rm": false,
        "rmdir": false,
        "del": false,
        "kill": false,
        "chmod": false,
        "chown": false,
        "/^git\\s+(push|reset|revert|clean)\\b/": false
    }
}